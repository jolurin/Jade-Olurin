#b, c, and d.
function loadDisplayExtract(img; channelNumber=1)

    for i = channelNumber:channelNumber+2
        Rchannel = img[:,:,1];
        Gchannel = img[:,:,2];
        Bchannel = img[:,:,3];
    end
    println("Reset with git reset -- mixed")
    return "Rchannel contents and size", Rchannel, size(Rchannel), "Gchannel contents and size", Gchannel, size(Gchannel), "Bchannel contents and size", Bchannel, size(Bchannel)
end

#e
image2 = img
image2[:,:,1] = img[:,:,2]
image2[:,:,2] = img[:,:,3]
image2[:,:,3] = img[:,:,1]
subplot(1,2,2)
imshow(image2)
subplot(1,2,1)
imshow(convert(Array{Float32,3}, img))
title("Original and with Flipped Colors"), axis("off")
subplot(1,2,2)
title(" "), axis("off")
#loading and showing flipped image
flipped = imread("Original and with Flipped Colors.png")
imshow(convert(Array{Float32,3}, flipped))

#B
numShift = 0
function shiftUp(image; numShift)
    shifted = circshift(image, (-numShift,0))
    subplot(1,2,2)
    imshow(shifted)
    title(" "), axis("off")
    return shifted
end
subplot(1,2,1)
imshow(Rchannel)
title("Original Rchannel with a 180 pixel shift up"), axis("off")
