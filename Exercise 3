#b.
function load_display_extract(img)
    Rchannel = img[:,:,1];
    Gchannel = img[:,:,2];
    Bchannel = img[:,:,3];
    return size
    return Rchannel, Gchannel, Bchannel
    println("Dimensions of Rchannel", size(Rchannel))
    println("Dimensions of Gchannel", size(Gchannel))
    println("Dimensions of Bchannel", size(Bchannel))
end
