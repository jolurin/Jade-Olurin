#B
numShift = 0
function shiftUp(image; numShift)
    shifted = circshift(image, (-numShift,0))
    subplot(1,2,2)
    imshow(shifted)
    title("Shifted Rchannel"), axis("off")
    return shifted
end
subplot(1,2,1)
imshow(Rchannel)
title("Original Rchannel"), axis("off")
shiftedFinal = imread("Rchannel\ shifted\ and\ unshifted.png")
